<!doctype html>
<html>
<head>
	<title>Contact Management System</title>
	<!-- Load bootstrap and fontawesome -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<!-- css -->
	<link rel="stylesheet" href="/styles.css">

</head>
<body>
	<div class="container">
		<div class="row">

			<div class="col-sm-12 columns">
				<img id="contact-picture"
				src="<%= contact.picture %>" alt="Contact Picture">
				<h2><%= contact.firstName + " " + contact.lastName %></h2>
			</div>
			<div class="col-sm-12 col-md-6 columns contact-information-section"
				<p>Occupation: <%= contact.occupation %></p>
			</div>
			<div class="col-sm-12 col-md-6 columns contact-information-section"
				<p>Employer: <%= contact.employer %></p>
			</div>
			<div class="col-sm-12 col-md-6 columns contact-information-section"
				<p>Phone: <%= contact.phone %></p>
			</div>
			<div class="col-sm-12 col-md-6 columns contact-information-section"
				<p>Email: <%= contact.email %></p>
			</div>
			<div class="col-sm-12 columns contact-information-section"
				<p>Notes: <%= contact.notes %></p>
			</div>

		</div>
	</div>
</body>
</html>
